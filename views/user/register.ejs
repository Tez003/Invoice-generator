<% layout('layouts/boilerplate') %>

<h1>Register</h1>
<form action="/register" method="POST" class="validated-form" novalidate>
  <div class="mb-3">
      <label class="form-label" for="username">Username</label>
      <input class="form-control" type="text" id="username" name="username" required>
      <div class="valid-feedback">
          Looks good!
      </div>
  </div>
  <div class="mb-3" hidden>
    <input class="form-control" type="passworrd" id="email" name="password" value="12345" required>
</div>
  <div class="mb-3">
      <label class="form-label" for="email">Email</label>
      <input class="form-control" type="email" id="email" name="email" required>
      <div class="valid-feedback">
          Looks good!
      </div>
  </div>
  <div class="mb-3">
      <label class="form-label" for="phone">Phone Number</label>
      <input class="form-control" type="number" id="phone" name="phone" required>
      <div class="valid-feedback">
          Looks good!
      </div>
  </div>
  <button class="btn btn-success">Register</button>
</form>